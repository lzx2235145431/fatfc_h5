
.header {
	width: 100%;
	display: flex;
	justify-content: center;
}
.header ._img {
	width: 50%;
}
.nav {
	margin-top: 10px;
	width: 100%;
	display: flex;
	justify-content: space-between;
	padding: 10px 0;
	background-image: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
}
.nav-item {
	width: 33%;
	text-align: center;
	border-right: 1px solid #FAF0E6;
	color: #FAF0E6;
}
.nav-item:last-child {
	border-right: 0
}
.banner {
	width: 100%;
	height: 250px;
}
.swiper-item {
	position: relative;
	width: 100%;
	height: 100%;
}
.swiper-item ._img {
	width: 100%;
	height: 100%;
}
.title {
	width: 100%;
	font-size: 26px;
	text-align: center;
	position: absolute;
	z-index: 999;
	color: #fff;
	bottom: 50px;
}
.partner-title {
	margin: 20px 0;
	width: 100%;
	text-align: center;
}
.partner {
	width: 100%;
	height: 100px;
	display: flex;
	justify-content: space-around;
	margin-top: 10px;
}
.partner-item {
	width: 20%;
}
.partner-item ._img {
	width: 100%;
}
.new-item {
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 100%;
	height: 100px;
	padding: 10px 0;
	border-bottom: 1px solid #E6E6E6;
	margin: 0 10px;
}
.new-item-pic {
	width: 30%;
}
.new-item-pic ._img{
	width: 80%;
}
.new-item-content {
	width: 60%;
}
.new-title {
	width: 100%;
	text-align: center;
	font-size: 20px;
	font-weight: 600;
	background-image: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}

